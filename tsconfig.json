{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["ES2015", "DOM", "ES2017"],
		"declaration": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true
	}
}
